generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  phone        String
  password     String?
  googleId     String?        @unique
  isAdmin      Boolean        @default(false)
  dob          DateTime?
  gender       String?
  profileImage String?
  state        String?
  nationality  String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  tests        TestResponse[]
  feedbacks    Feedback[]
  conversations Conversation[]

  @@map("user")
}

model TestResponse {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  type        String
  answers     Json
  score       Float?
  snapshot    Json
  status      String    @default("submitted")
  reportUrl   String?
  createdAt   DateTime  @default(now())
  feedbacks   Feedback[]

  @@map("testresponse")
}

model Feedback {
  id          String        @id @default(cuid())
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  testResponse TestResponse @relation(fields: [resultId], references: [id])
  resultId    String
  rating      Int
  comment     String?
  createdAt   DateTime      @default(now())

  @@map("feedback")
}

model Conversation {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String    @unique
  adminId       String?
  lastMessageAt DateTime?
  unreadCount   Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  messages      Message[]

  @@map("conversation")
}

model Message {
  id             String       @id @default(cuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String
  senderId       String
  senderType     String       // "user" or "admin"
  content        String?
  attachmentUrl  String?
  attachmentType String?      // "image" or "document"
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())

  @@map("message")
}


