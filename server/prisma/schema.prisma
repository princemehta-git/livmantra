generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String         @id @default(cuid())
  name      String
  email     String         @unique
  phone     String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  tests     TestResponse[]
}

model TestResponse {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  type        String
  answers     Json
  score       Float?
  snapshot    Json
  status      String   @default("submitted")
  reportUrl   String?
  createdAt   DateTime @default(now())
}


