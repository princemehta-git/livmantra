generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  phone        String
  password     String?
  isAdmin      Boolean        @default(false)
  dob          DateTime?
  gender       String?
  profileImage String?
  state        String?
  nationality  String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  tests        TestResponse[]
  feedbacks    Feedback[]

  @@map("user")
}

model TestResponse {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  type        String
  answers     Json
  score       Float?
  snapshot    Json
  status      String    @default("submitted")
  reportUrl   String?
  createdAt   DateTime  @default(now())
  feedbacks   Feedback[]

  @@map("testresponse")
}

model Feedback {
  id          String        @id @default(cuid())
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  testResponse TestResponse @relation(fields: [resultId], references: [id])
  resultId    String
  rating      Int
  comment     String?
  createdAt   DateTime      @default(now())

  @@map("feedback")
}


